<script>

            $(document).on("click", ".open-AddBookDialog", function () {
                var descID = $(this).data('id'); 
                $('#DescID').val(descID);
                if(descID == 0)
                {
                    $(".modal-body #txtShortDescription").val('');
                    $(".modal-body #txtLongDescription").val('');
                }
                else
                {
                    $.ajax({
                        type: 'GET',
                        url: "http://localhost:55185/Reservationapi/GetHotelDescription?DescriptionID=" + descID,
                        data: JSON.stringify({ "UnitTypeID": 1 }),
                        contentType: "application/json; charset=utf-8",
                        dataType: "json",
                        success: function (result) {
                            var r = result;
                            if (result != null) {
                                $.each(result, function () {
                                    $(".modal-body #txtShortDescription").val(this['shortdesc']);
                                    $(".modal-body #txtLongDescription").val(this['longdesc']);
                                });                           

                            } else {
                                alert("fail");
                            }
                        }
                    });
                }


            });

</script>
