                                    </section>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class='input-container'>
                                    <label for="txtLongDescription" class="labelcls">Hotel Long Description: </label>
                                    <div class="icon-ph"><i class="icon-envelope"></i></div>
                                    <section class="col col-6">
                                        <span id="spryHotelName">
                                            @Html.TextAreaFor(m => Model._hotelDescription.LognDescription, new { @name = "txtLongDescription", @placeholder = "Hotel Long Description", @class = "form-control", @id = "txtLongDescription" })
                                            <span class="selectRequiredMsg">Please select an item.</span>
                                        </span>
                                    </section>
                                </div>
                            </div>
                        </div> 
                    </div>
                    <div class="modal-footer">
                        @*<input type="button" class="btn btn-primary" value="Save" onclick="location.href='@Url.Action("SaveDescription", "Config")'" />*@
                        <button type="button" id="btnSave" class="btn btn-primary" data-dismiss="modal">Save</button>
                        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                    </div>
@*}*@
                </div>

            </div>
        </div>
    </div>
</div>
