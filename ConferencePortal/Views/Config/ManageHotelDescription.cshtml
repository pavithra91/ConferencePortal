@model ConferencePortal.Models.ConfigModel
@{
    ViewBag.Title = "ManageHotelDescription";
    Layout = "~/Views/Shared/_SystemLayout.cshtml";
}


<div class="container">
    <div class="container" style="padding-bottom:20px;">
        <input type="button" style="float:right;" class="btn btn-primary" value="Back" onclick="location.href='@Url.Action("Index", "Config")'" />

        <button type="button" class="open-AddBookDialog btn btn-primary" data-toggle="modal" data-id="0" data-target="#myModal">Add Description</button>
    </div>

    @Html.HiddenFor(m => Model._hotelDescription.DescID, new { @id="DescID" })
    @Html.HiddenFor(m => Model._hotelDescription.HotelID, new { @id = "HotelID" })

    <table id="example" class="display nowrap" cellspacing="0" width="100%">
        <thead>
            <tr>
                <th>Hotel Code</th>
                <th>Hotel Name</th>
                <th>Short Description</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model._hotelDescriptionList)
            {
                <tr>
                    <td>
                        @items.Hotel.HotelCode
                    </td>
                    <td>
                        @items.Hotel.HotelName
                    </td>
                    <td>
                        @items.ShortDescription
                    </td>
                    <td>
                        @items.HotelImage
                    </td>
                    <td>
                        <button type="button" class="open-AddBookDialog btn btn-primary" data-toggle="modal" data-id="@items.DescID" data-target="#myModal">Edit</button>
                    </td>
                    @*<td>
                        <a href="@Url.Action("ManageHotelDescription","Config", new { id = items.HotelID })" style="margin-left:20px;">
                            <i class="fa fa-pencil-square-o"></i>
                        </a>
                    </td>*@
                </tr>
            }
        </tbody>
    </table>

    <div class="container">
        <!-- Modal -->
        <div class="modal fade" id="myModal" role="dialog">
            <div class="modal-dialog">
                <!-- Modal content-->
                <div class="modal-content">
@*@using (Html.BeginForm("SaveDescription", "Config"))
{*@
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Hotel Description</h4>
                    </div>
                    <div class="modal-body">
                        <div class="row">
                            <div class="col-md-6">
                                <div class='input-container'>
                                    <label for="txtShortDescription" class="labelcls">Hotel Short Description: </label>
                                    <div class="icon-ph"><i class="icon-envelope"></i></div>
                                    <section class="col col-6">
                                        <span id="spryHotelCode">
                                            @Html.TextAreaFor(m => Model._hotelDescription.ShortDescription, new { @name = "txtShortDescription", @placeholder = "Hotel Short Description", @class = "form-control", @id = "txtShortDescription" })
                                            <span class="selectRequiredMsg">Please select an item.</span>
