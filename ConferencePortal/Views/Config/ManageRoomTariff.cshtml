@model ConferencePortal.Models.TariffModel
@{
    ViewBag.Title = "ManageRoomTariff";
    Layout = "~/Views/Shared/_SystemLayout.cshtml";
}

<h2>@Model._room.RoomName</h2>

<div class="global-wrap">
    @*<div class="top-area show-onload" style="height: auto; padding-top: 20px; padding-bottom: 50px;">
        <div class="bg-holder full">*@
            @*<div class="bg-mask"></div>*@
            <div class="bg-parallax" style=""></div>
            <div class="bg-content">
                <div class="container">
                    <div class="row">

                        <div class="col-md-8" style="width:100%; ">
                            <div class="search-tabs search-tabs-bg mt50">
                                <div class="tabbable" id="ttt">
                                    <ul class="nav nav-tabs" id="myTab">
                                        <li class="active">
                                            <a href="#tab-1" data-toggle="tab"><i class="fa fa-building-o"></i> <span>Room Rates</span></a>
                                        </li>
                                        <li>
                                            <a href="#tab-4" data-toggle="tab"><i class="fa fa-car"></i> <span>Room Allotment</span></a>
