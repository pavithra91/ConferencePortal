                                    </ul>

                                    <div class="tab-content">
                                        <div class="tab-pane fade in active" id="tab-1" style="background-color:rgba(134, 128, 128, 0.19)">
                                            @Html.Partial("_AssignRoomRatesView", Model)
                                        </div>

                                        <div class="tab-pane fade" id="tab-4" style="background-color:rgba(134, 128, 128, 0.19)">
                                            @*@Html.Partial("_ImageSettingsView")*@
