                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        @*</div>
    </div>*@
</div>

@section scriptLocation{
    <script>
        $('input[type=checkbox]').change(function () {
            if ($(this).prop("checked")) {
                //do the stuff that you would do when 'checked'
                location.href = '@Url.Action("ManageRoomTariff", "Config", new { id = 1, ShowDeleted = true })'               
                return;
            }
            else
            {
                location.href = '@Url.Action("ManageRoomTariff", "Config", new { id = 1, ShowDeleted = false })'
            }

            //Here do the stuff you want to do when 'unchecked'
        });
    </script>
}