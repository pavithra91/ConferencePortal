@{
    List<Hotel> hotels = ViewBag.Hotels;
}

@using (Html.BeginForm("SearchHotel", "Reservation", FormMethod.Post))
{

        <div class="col-md-6">
            <div class="form-group form-group-lg form-group-select-plus">
                <label>Conference Hotels</label>

                <select name="HotelList" id="HotelList" class="form-control">
                    @foreach (var hotel in hotels)
                    {
                        <option value="@hotel.HotelID">@hotel.HotelName</option>

                    }
                </select>
            </div>
        </div>
        <div class="input-daterange" data-date-format="M d, yyyy">
            <div class="row">



                <div class="col-md-3">
                    <div class="form-group form-group-lg form-group-icon-left">
                        <i class="fa fa-calendar input-icon input-icon-highlight"></i>
                        <label>Check-in</label>
                        <input class="form-control" name="start" onchange="myfunc()" type="text" />
                    </div>
                </div>
                <div class="col-md-3">
                    <div class="form-group form-group-lg form-group-icon-left">
                        <i class="fa fa-calendar input-icon input-icon-highlight"></i>
                        <label>Check-out</label>
                        <input class="form-control" name="end" type="text" />
                    </div>
                </div>


            </div>
        </div>

        <button class="btn btn-primary btn-lg" type="submit">Search for Hotels</button>

}


