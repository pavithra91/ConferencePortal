                            </li>
                        </ul>
                    </div>
                    <div class="col-md-3">
                        <span class="booking-item-price"> 
                        
                        @{ 
                            rate = (double)allotment.Where(w => w.RoomID == items.RoomID).Sum(w=>w.RoomRate.Rate) / allotment.Where(w => w.RoomID == items.RoomID).Count();
                        }

                            @rate @items.Currency.Currency1 </span><span>/night</span>
                        
                        <br />

                        <div class="form-group form-group-select-plus">
            <label>Rooms</label>
                            <select name="test" id="@items.RoomID" class="form-control" onchange="myFunction(@items.RoomID)">                                
                                @for (int i = 0; i < allotment.Where(w => w.RoomID == items.RoomID).Min(w => w.AvailableRooms); i++)
                                {
                                    <option>@RoomCount</option>

                                    {
                                        RoomCount++;
                                    }
                                }
                                
                                @{ 
                                    RoomCount = 1;
                                }
                            </select>



            @*<div class="btn-group btn-group-select-num" data-toggle="buttons">
                
                <label class="btn btn-primary active">
